!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Fixus
    = csrf_meta_tags
    %link{:rel => "stylesheet", :href => "https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400"}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    - if mobile_device?
      = stylesheet_link_tag 'mobile', media: 'all', 'data-turbolinks-track': 'reload'
    - else
      = stylesheet_link_tag 'desktop', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    = render 'layouts/header'

    = yield

    = render 'layouts/footer'
